// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Org {
  id               String @id @default(uuid())
  email            String @unique
  password_hash    String
  responsible_name String
  zip_code         String
  address          String
  whatsapp         String

  @@map("orgs")
}

model Pet {
  id                 String @id @default(uuid())
  about              String
  name               String
  age                Int
  energy_level       Int
  size               String
  independence_level Int
  environment        String

  @@map("pets")
}

model ImagePet {
  id            String @id @default(uuid())
  original_name String
  name_file     String
  path          String

  @@map("image_pet")
}
